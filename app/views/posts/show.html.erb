<html>
<head>
</head>
<body>
<div class="container">

<p>
  <b><%=h @post.title %></b>
  <p>
    -<%=h @post.author %>
  </p>
</p>
 
<p>
  <%=h @post.body %>
</p>

<h2>Comments</h2>

<% @post.comments.each do |c| %>
  <p>
    <b><%=h c.name %> said:</b><br />
    <%= time_ago_in_words(c.created_at) %> ago
  </p>

  <p>
    <%=h c.body %>
  </p>
<% end %>


<%= form_for [@post, Comment.new] do |f| %>
   <p>
     <%= f.label :name, "Author" %><br />
     <%= f.text_field :name %><br />
     <%= f.label :body, "Comment Description" %><br />
     <%= f.text_area :body %>
     <%= f.hidden_field :post_id %>
   </p>
 
   <p>
     <%= link_to "Add Comment", new_comment_path(post_id: @post.id), :class => 'btn btn-sm btn-danger' %>
   </p>
<% end %>
</div>
</body>
</html>
